<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".rp.ui.ResetPswdActivity">

    <com.jrmf360.rylib.rp.widget.ActionBarView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content="重置密码" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/text_gray_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/base_padding"
                android:visibility="gone"
                android:text="请填写证件号码完成身份验证"
                android:textSize="12dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="姓名" />

                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_username"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:textColorHint="@color/color_b7b7b7"
                    android:gravity="center_vertical"
                    android:hint="请填写完整姓名"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/base_padding" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份证" />

                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_identity"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:digits="0123456789xyzXYZ"
                    android:gravity="center_vertical"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_b7b7b7"
                    android:paddingRight="@dimen/base_padding" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机号" />

                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_userphone"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_b7b7b7"
                    android:paddingRight="@dimen/base_padding" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="验证码" />

                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_vcode"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写验证码"
                    android:maxLength="6"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_b7b7b7"
                    android:inputType="number"
                    android:paddingRight="@dimen/base_padding" />

                <TextView
                    android:id="@+id/tv_send_code"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_marginRight="@dimen/base_padding"
                    android:layout_weight="1.5"
                    android:background="@drawable/_bg_red_round"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="发送验证码" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_padding"
                android:background="@color/background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="新密码" />

                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_password"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:maxLength="6"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_b7b7b7"
                    android:inputType="numberPassword"
                    android:gravity="center_vertical"
                    android:hint="请输入6位新支付密码"
                    android:paddingRight="@dimen/base_padding" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="@dimen/base_padding"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="确认新密码" />
                <com.jrmf360.rylib.rp.widget.ClearEditText
                    android:id="@+id/et_confirm_pwd"
                    style="@style/text_black_16"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@null"
                    android:maxLength="6"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_b7b7b7"
                    android:inputType="numberPassword"
                    android:gravity="center_vertical"
                    android:hint="请重新输入6位新支付密码"
                    android:paddingRight="@dimen/base_padding" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:padding="@dimen/base_padding">
                <Button
                    android:id="@+id/btn_next"
                    style="@style/text_black_16"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/_bg_gray_round"
                    android:text="提交" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
